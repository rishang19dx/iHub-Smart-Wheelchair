<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="true"/>
  <arg name="map_file" default="$(find navigation)/maps/test_3.yaml"/>

  <!-- Map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find navigation)/maps/map.yaml"/>

  <!-- laser odometry-->
  <include file="$(find localization)/launch/odometry_slam.launch"/>   
  <!-- AMCL -->
  <include file="$(find navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include> 
  
<!--node pkg="navigation" name="movebase_client_py" type="goal_set.py" output="screen"/>
<node pkg="navigation" name="goal_letter" type="sock.py" output="screen"/-->
  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find navigation)/rviz/navigation.rviz"/>
  </group>

</launch>
